# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
# Get this from MongoDB Atlas: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@cluster.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sakhalas?retryWrites=true&w=majority

# JWT Configuration
# Generate a strong random string for production using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
# Your frontend URL (deployed on Render)
CORS_ORIGIN=https://sakhalas-1.onrender.com
FRONTEND_URL=https://sakhalas-1.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
